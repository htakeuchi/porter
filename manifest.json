{
  "name": "Porter for WorkFlowy",
  "version": "1.3",
  "description": "Exports WorkFlowy's outlines to Markdown and HTML. Other some useful features.",
  "icons" : {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
   },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "content_scripts": [ {
    "matches": ["https://workflowy.com/*"],
    "js": [
      "js/jquery-2.2.0.min.js",
      "js/jquery-ui.min.js",
      "js/tree.jquery.js",
      "js/content_script.js"
      ],
    "css": [
      "css/jqtree.css",
      "css/content_script.css"
      ]
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],

  "page_action": {
    "default_name": "Porter for WorkFlowy",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "web_accessible_resources": [
    "http://fonts.gstatic.com/*",
    "css/theme/*",
    "css/images/*"
    ],

  "manifest_version": 2
}
